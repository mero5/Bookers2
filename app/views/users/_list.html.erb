<%#左上プロフィール%>
<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <i class="fas fa-user-cog"></i><%= link_to "プロフィール編集", edit_user_path(current_user.id) %>
</div>